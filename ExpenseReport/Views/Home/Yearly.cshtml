@model IEnumerable<ExpenseReport.Expens>

@{ 
    var transactionType = Model.GroupBy(x => x.TransactionType)
    .Select(group => new { Expens = group.Key, expenseList = group.ToList() })
    .ToList();

}
<br />
<div>
    <h4>Yearly Expenses</h4>
</div>

@foreach (var title in ViewBag.Titles)
{
    <div class="container">
        <table class="table table-dark table-active table-striped">
            <thead>
                <tr class="text-lg-center">
                    <td >
                        @title
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Amount</td>
                    <td>Date</td>
                </tr>
                @foreach (var model in Model)
                {
                    if (model.TransactionType == title)
                    {
                        <tr>
                            <td>
                                @Html.Name(model.Id.ToString())
                            </td>
                            <td>
                                @Html.Name(model.Name)
                            </td>
                            <td>
                                @Html.Name(model.Amount.ToString()).ToHtmlString()
                            </td>
                            <td>
                                @Html.Name(model.Date.ToString())
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
}




